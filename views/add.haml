%a#list{:href => "/"} 
  %span Back to <br />list
.add-form
  %form{:method => "post", :action => "/add"}
  .alt-one
    %label Project title
    %input{:type => "text", :name => "title"}
  
  .alt-two
    %label When?
    %fieldset
      %input{:type => "text", :name => "datepicker", :id => "datepicker"}
      %input{:type => "hidden", :name => "when_date", :id => "when_date"}
      %span.at at
      %select{:name => "when_time", :id => "when-time"}
        - times_of_day.each do |time|
          %option{:value => time, :selected => (time=="1:00 pm")}= time
  
  .alt-one
    %label Where?
    %textarea{:rows => "3", :name => "where"}
  
  .alt-two
    %label What are you looking for? (gender, age...)
    %textarea{:rows => "4", :name => "description"}
  
  %input#submit{:type => "submit"}